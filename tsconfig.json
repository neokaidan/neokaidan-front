{
  "compilerOptions": {

    "baseUrl": ".",
    "paths": {
        "@static/*": ["public/*"],
        "@components/*": ["components/*"]
    },

    "module": "ESNext",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
