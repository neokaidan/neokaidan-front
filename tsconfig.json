{
  "compilerOptions": {

    "baseUrl": ".",
    "paths": {
        "@static/*": ["public/*"],
        "@components/*": ["src/components/*"],
        "@containers/*": ["src/containers/*"]
    },

    "module": "ESNext",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src", "src/components", "src/containers", "src/custom.d.ts"
  ]
}
